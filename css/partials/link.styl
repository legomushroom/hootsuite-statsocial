@import '../assets/imports.styl'

.hst-link
  background-color white
  color c-dark1
  border PX solid c-blue1
  font-size 11*PX
  padding .6*GS 1.5*GS 
  border-radius BR
  box-shadow SHADOW_1
  cursor pointer
  display inline-block
  position relative
  &:hover,
  &:focus
    background-color rgba(c-blue1, .1)
    text-decoration none
  &:active
    box-shadow none
  
  &__icon
    // position absolute
    float left
    left 0
    border-right PX solid c-blue1
    padding-right GS
    margin-right 1.5*GS 
    .hst-icon
      fill c-blue1
      rect 2*GS
    